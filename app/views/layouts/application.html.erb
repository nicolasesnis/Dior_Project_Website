<!DOCTYPE html>
<html>
  <head>
    <title>DiorProjectWebsite</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <script src="http://fuelcdn.com/fuelux/2.3/loader.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Dancing+Script" rel="stylesheet">
  </head>

  <body>
    <%= render 'shared/navbar' %>
    <%= render 'shared/main' %>
    <%= render 'shared/left-menu' %>
    <%= render 'shared/footer' %>
    <%= yield %>
  </body>

  <script>
    var navbar = document.getElementById('navbar');
    var tabs = document.getElementById('tabs');


    navbar.addEventListener("mouseover", (event) => {
      if ($(document).scrollTop() < 50) {
        tabs.classList.remove("tabs_hidden");
        tabs.classList.add("tabs");
      }
    });
    navbar.addEventListener("mouseout", (event) => {
        tabs.classList.add("tabs_hidden");
        tabs.classList.remove("tabs");
    });


    $(window).scroll(function() {
      if ($(document).scrollTop() > 50) {
        $('nav').addClass('shrink');
      } else {
        $('nav').removeClass('shrink');
      }
    });

  </script>
</html>
